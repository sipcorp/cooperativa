<!--========== Third Modal ==========-->
<!-- Modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
       <div class="modal-content">
          <div class="modal-header modal-header-primary">
             <button type="button" class="close" data-dismiss="modal" aria-hidden="true">  Ã—  </button>
             <h4>PRODUCTOS</h4>
          </div>
          <div class="modal-body" ng-controller="invoiceController">
            <fieldset>
               <ul class="form-list list-bordered dotted">
                  <li class="control-group">
                     <label for="custmerName" class="control-label">Nombre completo:</label>
                     <div class="controls">
                        <input id="custmerName" class="span6 clear-field" type="text" ng-model="customerName"
                           ng-blur="createInvoice('n',customerName)">
                     </div>
                  </li>
                  <!-- // control group -->
                  <li class="control-group">
                     <label for="cedula" class="control-label">Cedula / RUC:</label>
                     <div class="controls">
                        <input id="cedula" class="span6 clear-field" type="text" ng-model="customerID"
                           ng-blur="createInvoice('c',customerID)">
                     </div>
                  </li>
                  <!-- // control group -->
                  <li class="control-group">
                     <label for="address" class="control-label">Direccion:</label>
                     <div class="controls">
                        <textarea id="address" rows="3" class="span6 clear-field" ng-model="customerAdrress"
                           ng-change="createInvoice('a',customerAdrress)"></textarea>
                     </div>
                  </li>
                  <!-- // control group -->
                  <li class="control-group">
                     <label for="movile" class="control-label">Movile:</label>
                     <div class="controls">
                        <input id="movile" class="span6 clear-field" type="text" ng-model="customerMovile"
                           ng-blur="createInvoice('m',customerMovile)">
                     </div>
                  </li>
                  <!-- // control group -->
                  <li class="control-group">
                     <label for="phone" class="control-label">Telefono:</label>
                     <div class="controls">
                        <input id="phone" class="span6 clear-field" type="text" ng-model="customerPhone"
                           ng-blur="createInvoice('p',customerPhone)">
                     </div>
                  </li>
                  <!-- // control group -->
                  <li class="control-group">
                     <label for="obser" class="control-label">Observacion:</label>
                     <div class="controls">
                        <textarea id="obser" rows="3" class="span6 obser clear-field" ng-model="customerOb"
                           ng-blur="createInvoice('o',customerOb)"></textarea>
                     </div>
                  </li>
                  <!-- // control group -->
               </ul>
            </fieldset>
             <!-- ends col-12 -->
          </div>
          <div class="clearfix"></div>
       </div>
       <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
 </div>
 <!-- /.modal -->




   